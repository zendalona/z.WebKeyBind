{
    "manifest_version": 3,
    "name": "z.WebKeyBind",
    "version": "1.0",
    "description": "Use Custom Shortcut key to Trigger the button of the page. ",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "commands",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "z.WebKeyBind Settings"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "z-webkeybind@yourdomain.com",
            "strict_min_version": "109.0"
        }
    },
    "background": {
        "service_worker": "background.js",
        "scripts": ["background.js"],
        "type": "module"
    },
    
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["index.html","style.css","popup.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+S",
                "mac": "Alt+Shift+S"
            },
            "description": "Open or Close z.WebKeyBind Settings"
        }
    }
}